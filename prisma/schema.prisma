generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id
  email    String  @unique
  name     String?
  scores   Score[]
}

model Score {
  id        Int      @id @default(autoincrement())
  userId    String
  moves     Int
  game      String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, game])
}
